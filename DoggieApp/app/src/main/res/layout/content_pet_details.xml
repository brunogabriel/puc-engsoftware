<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent" xmlns:tools="http://schemas.android.com/tools"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <TextView
                android:id="@+id/pet_name"
                android:textColor="@color/colorPrimary"
                android:textSize="32sp"
                android:layout_width="0dp"
                android:fontFamily="@font/montserratbold"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginEnd="16dp" app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginStart="16dp" app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="24dp"/>

        <TextView
                android:id="@+id/pet_type"
                android:text="@string/type"
                android:fontFamily="@font/robotoregular"
                android:textColor="@color/colorGrayLevel2"
                android:textSize="16sp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                app:layout_constraintTop_toBottomOf="@+id/pet_name"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="16dp"
                android:layout_marginStart="16dp" app:layout_constraintHorizontal_bias="0.0"/>

        <TextView
                android:id="@+id/pet_type_text"
                android:textSize="20sp"
                android:fontFamily="@font/montserratregular"
                android:textColor="@color/colorGrayLevel1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                app:layout_constraintTop_toBottomOf="@+id/pet_type"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="16dp"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="16dp"/>

        <TextView
                android:id="@+id/pet_gait"
                android:visibility="gone"
                android:text="@string/gait"
                android:fontFamily="@font/robotoregular"
                android:textColor="@color/colorGrayLevel2"
                android:textSize="16sp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                app:layout_constraintTop_toBottomOf="@+id/pet_type_text"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="16dp"
                android:layout_marginStart="16dp"
                app:layout_constraintHorizontal_bias="0.0"/>

        <TextView
                android:id="@+id/pet_gait_text"
                android:visibility="gone"
                android:textSize="20sp"
                android:fontFamily="@font/montserratregular"
                android:textColor="@color/colorGrayLevel1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                app:layout_constraintTop_toBottomOf="@+id/pet_gait"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="16dp"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="16dp"/>

        <TextView
                android:id="@+id/pet_allergies"
                android:visibility="gone"
                android:text="@string/allergies"
                android:fontFamily="@font/robotoregular"
                android:textColor="@color/colorGrayLevel2"
                android:textSize="16sp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                app:layout_constraintTop_toBottomOf="@+id/pet_gait_text"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="16dp"
                android:layout_marginStart="16dp"
                app:layout_constraintHorizontal_bias="0.0"/>

        <TextView
                android:id="@+id/pet_allergies_text"
                android:visibility="gone"
                android:textSize="20sp"
                android:fontFamily="@font/montserratregular"
                android:textColor="@color/colorGrayLevel1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                app:layout_constraintTop_toBottomOf="@+id/pet_allergies"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="16dp"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="16dp"/>

        <TextView
                android:id="@+id/pet_habits"
                android:visibility="gone"
                android:text="@string/habits"
                android:fontFamily="@font/robotoregular"
                android:textColor="@color/colorGrayLevel2"
                android:textSize="16sp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                app:layout_constraintTop_toBottomOf="@+id/pet_allergies_text"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="16dp"
                android:layout_marginStart="16dp"
                app:layout_constraintHorizontal_bias="0.0"/>

        <TextView
                android:id="@+id/pet_habits_text"
                android:visibility="gone"
                android:textSize="20sp"
                android:fontFamily="@font/montserratregular"
                android:textColor="@color/colorGrayLevel1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                app:layout_constraintTop_toBottomOf="@+id/pet_habits"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="16dp"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="16dp"/>

        <TextView
                android:id="@+id/pet_preferences"
                android:visibility="gone"
                android:text="@string/preferences"
                android:fontFamily="@font/robotoregular"
                android:textColor="@color/colorGrayLevel2"
                android:textSize="16sp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                app:layout_constraintTop_toBottomOf="@+id/pet_habits_text"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="16dp"
                android:layout_marginStart="16dp"
                app:layout_constraintHorizontal_bias="0.0"/>

        <TextView
                android:id="@+id/pet_preferences_text"
                android:visibility="gone"
                android:textSize="20sp"
                android:fontFamily="@font/montserratregular"
                android:textColor="@color/colorGrayLevel1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                app:layout_constraintTop_toBottomOf="@+id/pet_preferences"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="16dp"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="16dp"/>

        <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/loading_view"
                android:visibility="gone"
                app:layout_constraintTop_toBottomOf="@+id/pet_preferences_text"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_width="match_parent"
                android:layout_height="120dp" android:layout_marginTop="16dp" app:layout_constraintEnd_toEndOf="parent">

            <ProgressBar
                    android:id="@+id/progress_bar"
                    android:layout_width="64dp"
                    android:layout_height="64dp" app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="8dp" android:layout_marginBottom="8dp"
                    app:layout_constraintBottom_toBottomOf="parent" android:layout_marginTop="8dp"
                    app:layout_constraintTop_toTopOf="parent"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/try_again_view"
                app:layout_constraintTop_toBottomOf="@+id/pet_preferences_text"
                app:layout_constraintStart_toStartOf="parent"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="parent">

            <com.airbnb.lottie.LottieAnimationView
                    android:id="@+id/try_again_animation"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:layout_gravity="center"
                    android:scaleType="fitCenter"
                    app:lottie_fileName="wifi.json"
                    app:lottie_loop="true"
                    app:layout_constraintVertical_chainStyle="packed"
                    app:lottie_autoPlay="true"
                    android:layout_marginStart="8dp"
                    app:layout_constraintStart_toStartOf="parent" android:layout_marginEnd="8dp"
                    app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="32dp"
                    app:layout_constraintTop_toTopOf="parent" app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintBottom_toTopOf="@+id/try_again_text"/>

            <TextView
                    android:id="@+id/try_again_text"
                    android:text="@string/try_again_message"
                    android:textSize="18sp"
                    android:fontFamily="@font/robotoregular"
                    android:textColor="@color/colorPrimary"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="8dp"
                    app:layout_constraintStart_toStartOf="parent" android:layout_marginTop="16dp"
                    app:layout_constraintTop_toBottomOf="@+id/try_again_animation"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintBottom_toTopOf="@+id/try_again_button"/>

            <Button
                    android:id="@+id/try_again_button"
                    android:text="@string/try_again"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    app:layout_constraintTop_toBottomOf="@+id/try_again_text"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginEnd="8dp" app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintHorizontal_bias="0.5" android:layout_marginBottom="32dp"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/empty_view"
                app:layout_constraintTop_toBottomOf="@+id/pet_preferences_text"
                app:layout_constraintStart_toStartOf="parent"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:layout_constraintEnd_toEndOf="parent">

            <com.airbnb.lottie.LottieAnimationView
                    android:id="@+id/empty_view_animation"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:layout_gravity="center"
                    android:scaleType="fitCenter"
                    app:lottie_fileName="sad.json"
                    app:lottie_loop="true"
                    app:layout_constraintVertical_chainStyle="packed"
                    app:lottie_autoPlay="true"
                    android:layout_marginStart="8dp"
                    app:layout_constraintStart_toStartOf="parent" android:layout_marginEnd="8dp"
                    app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="32dp"
                    app:layout_constraintTop_toTopOf="parent" app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintBottom_toTopOf="@+id/empty_view_text"/>

            <TextView
                    android:id="@+id/empty_view_text"
                    android:text="@string/empty_message_services"
                    android:textSize="18sp"
                    android:fontFamily="@font/robotoregular"
                    android:textColor="@color/colorPrimary"
                    android:layout_width="0dp"
                    android:gravity="center"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    app:layout_constraintTop_toBottomOf="@+id/empty_view_animation" android:layout_marginStart="32dp"
                    app:layout_constraintStart_toStartOf="parent" android:layout_marginEnd="32dp"
                    app:layout_constraintEnd_toEndOf="parent" app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintHorizontal_bias="0.5" android:layout_marginBottom="32dp"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <TextView
                android:id="@+id/services_index_text"
                android:visibility="gone"
                android:text="@string/services"
                android:textColor="@color/colorPrimary"
                android:textSize="32sp"
                app:layout_constraintTop_toBottomOf="@+id/pet_preferences_text"
                app:layout_constraintStart_toStartOf="parent"
                android:fontFamily="@font/montserratbold"
                android:layout_width="0dp"
                android:layout_height="wrap_content" android:layout_marginTop="16dp"
                app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"/>

        <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recycler_view"
                android:visibility="gone"
                app:layout_constraintTop_toBottomOf="@+id/services_index_text"
                app:layout_constraintStart_toStartOf="parent"
                tools:listitem="@layout/holder_service"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                app:layout_constraintEnd_toEndOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.core.widget.NestedScrollView>