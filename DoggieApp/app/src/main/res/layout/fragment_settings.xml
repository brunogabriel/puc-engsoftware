<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <TextView
            android:id="@+id/welcome_message"
            android:textSize="24sp"
            android:textColor="@color/colorGrayLevel1"
            android:fontFamily="@font/robotomedium"
            android:layout_width="0dp"
            android:layout_height="wrap_content" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="16dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="24dp"/>

    <TextView
            android:id="@+id/pzs_message"
            android:textSize="14sp"
            android:fontFamily="@font/robotoregular"
            android:textColor="@color/colorGrayLevel2"
            android:text="@string/pataz_message"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="16dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/welcome_message"/>

    <Button
            android:id="@+id/logout_button"
            android:text="@string/logout"
            android:layout_width="wrap_content"
            style="@style/Widget.AppTheme.Button.TextButton"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="16dp" android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/pzs_message" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="260dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>